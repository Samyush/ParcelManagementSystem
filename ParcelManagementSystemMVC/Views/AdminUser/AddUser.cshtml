@{ 
    ViewData["Title"] = "AddUser";
    Layout = "AdminLayout";
}
@model ParcelManagementSystemMVC.Models.Users

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Parcel" asp-action="Dashboard">Home</a></li>
        <li class="breadcrumb-item">User</li>
        <li class="breadcrumb-item active" aria-current="page">Add New</li>
    </ol>
</nav>
<form method="post" asp-controller="AdminUser" asp-action="UserList"> 
  <div class="row">
    <div class="col-5">
        <div class="row mb-2">
            <div class="col-4">
                <label for="firstname" class="form-label">First Name</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="FirstName"  class="form-control" id="firstname" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="lastname" class="form-label">Last Name</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="LastName" class="form-control" id="lastname" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="street" class="form-label">Street</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for ="Street"  class="form-control" id="street" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="city" class="form-label">City</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="City" class="form-control" id="city" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="state" class="form-label">State</label>
            </div>
            <div class="col-6">
                    <input type="text" class="form-control" asp-for="State"/>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="country"  class="form-label">Country</label>
            </div>
            <div class="col-6">
                  <input type="text" class="form-control" asp-for="Country"/>
            </div>
        </div>
    </div>
    <div class="col-5">
        <div class="row mb-2">
            <div class="col-4">
                <label for="branch" class="form-label">Branch</label>
            </div>
            <div class="col-6">
                    <select class="form-select" asp-for="Branch" id="branch">
                        <option selected disabled>Select Branch</option>
                      @* @foreach(var i in Model.BranchModel)
                        {
                            <option value="@i.Branch_name">@i.Branch_name</option>
                        }*@
                    </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="phoneNumber" class="form-label">PhoneNumber</label>
            </div>
            <div class="col-6">
                <input type="text" class="form-control" asp-for="PhoneNumber" id="phoneNumber" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="email" class="form-label">Email</label>
            </div>
            <div class="col-6">
                <input type="email" asp-for="Email" class="form-control" id="email"/>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="branch" asp-for="IsExternal" class="form-label">Is External</label>
            </div> 
            <div class="col-6">
                <input type="checkbox"  class="form-check" id="branch" />

            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="username" class="form-label">Username</label>
            </div>
            <div class="col-6">
                <input type="text" class="form-control" id="username" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="password" class="form-label">Password</label>
            </div>
            <div class="col-6">
                <input  asp-for="UserPassword"  class="form-control" id="password" />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <label for="accessrole" class="form-label">Access Role</label>
            </div>
            <div class="col-6">
                <select  asp-for="AccessRole" class="form-select" id="accessrole">
                    <option selected disabled>Roles</option>
                      @*  @foreach (var i in Mod)
                        {
                           <option value="@i.name">@i.name</option>
                        }
                        *@
                </select>
            </div>
        </div>
    </div>


    <div class="col-2 justify-content-center mt-5">

            <div class="form-group">
                <label asp-for="Imagefile"></label>
                <input asp-for="Imagefile" type="file" class="form-control" />
                <span asp-validation-for="Imagefile" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>

    </div>
  </div>
</form>
<div class="container">
    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">


        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-primary">Save and Enter New Parcel</button>
        <button class="btn btn-primary" type="reset">Reset</button>

    </div>
</div>
