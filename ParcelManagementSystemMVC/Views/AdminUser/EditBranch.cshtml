@{
    ViewData["Title"] = "EditBranch";
    Layout = "AdminLayout";
}
@model Branch

<form method="post" asp-controller="AdminUser" asp-action="EditBranch">

    <div class="main">
        <div class="container">
            <div class="row align-items-center g-4 mt-3">
                <div class="col-auto">
                    <label>Branch Name :</label>
                </div>
                <div class="col-auto">
                    <input type="text" asp-for="BranchName" class="form-control" id="BName">
                </div>
                <div class="col-auto">
                    <label>Branch Code :</label>
                </div>
                <div class="col-3">
                    <input type="text" asp-for="BranchCode" class="form-control" id="BCode">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>Street :</label>
                </div>
                <div class="col-auto">
                    <input type="text" asp-for="Street" class="form-control" id="BStreet" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>City :</label>
                </div>
                <div class="col-auto ms-3">
                    <input type="text" asp-for="City" class="form-control" id="BCity" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-5">
                    <label>State :</label>
                </div>
                <div class="col-auto ms-2">
                    <input type="text" asp-for="State" class="form-control" id="BState" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-auto ms-4">
                    <label>Zip Code:</label>
                </div>
                <div class="col-auto ms-2">
                    <input type="text" asp-for="ZipCode" class="form-control" id="BZipCode" />
                </div>
            </div>
            <div class="d-grid gap-lg-2 d-md-flex justify-content-md-center p-2 mt-4 ">
                <button class="btn btn-outline-primary me-md-2" type="submit">UpdateBranch</button>
            </div>
        </div>
    </div>

</form>