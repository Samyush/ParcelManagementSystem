@model ParcelManagementSystemMVC.Models.Roles

@{
    ViewData["Title"] = "Edit";
    Layout = "AdminLayout";

}


<h1>Edit</h1>
<form method="post" asp-action="Edit" asp-controller="Role">
 <div class="main">
     <div class="container">
        <div class="row align-items-center g-4 mt-3">
            <div class="col-auto">
                <label>Role Name :</label>
            </div>
            <div class="col-auto">
                <input type="text" asp-for="name" class="form-control">
            </div>
            <div class="col-auto">
                <label>Status</label>
            </div>
            <div class="col-3">
                <input type="text" asp-for="status" class="form-control" aria-describedby="passwordHelpInline">
            </div>
         </div>

     </div>
    <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
        <a asp-action="RoleList">Back to List</a>
    </div>
 </div>
</form>
 
    
        